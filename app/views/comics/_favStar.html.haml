%span{id: "comic_#{comic.id}"}
  - if user_signed_in?
    - if current_user.favorite_comics.find_by_id(comic.id)
      = link_to "", user_favorite_path(user_id: current_user, id: comic), method: :delete, remote: true, class: "like fav-icon icon-star-full"
    - else
      = link_to "", user_favorites_path(user_id: current_user,comic_id: comic), method: :post, remote: true ,class: "fav-icon icon-star-full"
